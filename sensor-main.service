[Unit]
Description=Sensor Project Reader
After=network.target sensor-api-write.service

[Service]
Type=simple
User=<username>
WorkingDirectory=/home/<username>/sensor_project
Environment="PATH=/home/<username>/sensor_project/venv/bin"
ExecStart=/home/<username>/sensor_project/venv/bin/python main.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target